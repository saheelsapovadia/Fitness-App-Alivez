<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectManageClients">

    <TextView
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="330dp"
        android:text="YES/NO"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header_workout"
        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/orange_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CLIENT"
            android:textColor="@color/colorSecondary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/manage_client_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/header_workout"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ic_launcher_round" />

    <TextView
        android:id="@+id/manage_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="203dp"
        android:text="Selected User"
        android:textColor="@color/intro_title_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:text="FEES PENDING?"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />

</RelativeLayout>